<Page x:Class="restaurant.readyOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:restaurant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="readyOrder">

    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="360" Margin="10,80,0,0" VerticalAlignment="Top" Width="580" Background="#FFE5E5E5"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Ready orders:" VerticalAlignment="Top" FontSize="20"/>
        <StackPanel HorizontalAlignment="Left" Height="44" Margin="20,53,0,0" VerticalAlignment="Top" Width="580" Orientation="Horizontal">
            <TextBlock TextWrapping="Wrap" Text="Table number" Width="185" FontSize="15" Margin="0,0,0,0.2" />
            <TextBlock TextWrapping="Wrap" Text="Order number" Width="134" FontSize="15" Margin="30,0,0,0.2"/>
            <TextBlock TextWrapping="Wrap" Text="Status" Width="69" FontSize="15" Margin="100,0,0,0"/>
        </StackPanel>
        <Button Content="Ready" HorizontalAlignment="Right" VerticalAlignment="Top" Width="126" Height="31" FontSize="20" RenderTransformOrigin="0.831,0.634" x:Name="Btn_ready" Click="Btn_ready_Click" Margin="0,97,43,0" />
    </Grid>
</Page>
