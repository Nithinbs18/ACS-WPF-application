<Window x:Class="CrossSum_Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossSum_Project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="320">
    <Grid Background="Wheat">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Calculate Cross Sum" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="14" FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Left" Height="23" Margin="10,60,0,0" VerticalAlignment="Top"  Orientation="Horizontal" Width="294">
            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Enter a Number:" VerticalAlignment="Top"/>
            <TextBox x:Name="Tbx_input" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="5,0,15,0" TextChanged="Tbx_input_TextChanged" KeyDown="Tbx_input_KeyDown"/>
            <Button x:Name="Btn_go" Content="GO" Width="50" Margin="0,0,0,0" Click="Btn_go_Click" />
        </StackPanel>
        <TextBlock Name="Tbk_result" HorizontalAlignment="Left" Margin="10,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="65" Width="277"/>
    </Grid>
</Window>
 